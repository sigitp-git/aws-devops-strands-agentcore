[
    {
        "name": "search_aws_provider_docs",
        "description": "Search AWS provider documentation for resources and attributes",
        "inputSchema": {
            "type": "object",
            "properties": {
                "asset_name": {
                    "type": "string",
                    "description": "Name of the AWS service (asset) to look for (e.g., 'aws_s3_bucket', 'aws_lambda_function')"
                },
                "asset_type": {
                    "type": "string",
                    "description": "Type of documentation to search",
                    "default": "resource",
                    "enum": ["resource", "data_source", "both"]
                },
                "region": {
                    "type": "string",
                    "description": "AWS region for context",
                    "default": "us-east-1",
                    "enum": [
                        "us-east-1",
                        "us-east-2",
                        "us-west-1",
                        "us-west-2",
                        "eu-west-1",
                        "eu-west-2",
                        "eu-central-1",
                        "ap-southeast-1",
                        "ap-southeast-2",
                        "ap-northeast-1"
                    ]
                }
            },
            "required": ["asset_name"]
        }
    },
