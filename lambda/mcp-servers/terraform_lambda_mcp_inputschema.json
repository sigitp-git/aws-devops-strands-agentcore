    {
        "name": "search_user_provided_module",
        "description": "Search for a user-provided Terraform registry module and understand its inputs, outputs, and usage",
        "inputSchema": {
            "type": "object",
            "properties": {
                "module_url": {
                    "type": "string",
                    "description": "URL or identifier of the Terraform module (e.g., 'hashicorp/consul/aws')"
                },
                "version": {
                    "type": "string",
                    "description": "Specific version of the module to analyze"
                },
                "variables": {
                    "type": "object",
                    "description": "Variables to use when analyzing the module",
                    "additionalProperties": true
                },
                "region": {
                    "type": "string",
                    "description": "AWS region for context",
                    "default": "us-east-1",
                    "enum": [
                        "us-east-1",
                        "us-east-2",
                        "us-west-1",
                        "us-west-2",
                        "eu-west-1",
                        "eu-west-2",
                        "eu-central-1",
                        "ap-southeast-1",
                        "ap-southeast-2",
                        "ap-northeast-1"
                    ]
                }
            },
            "required": ["module_url"]
        }
    },
    {
        "name": "execute_terraform_command",
        "description": "Execute Terraform workflow commands against an AWS account",
        "inputSchema": {
            "type": "object",
            "properties": {
                "command": {
                    "type": "string",
                    "description": "Terraform command to execute",
                    "enum": ["init", "plan", "validate", "apply", "destroy"]
                },
                "working_directory": {
                    "type": "string",
                    "description": "Directory containing Terraform files"
                },
                "variables": {
                    "type": "object",
                    "description": "Terraform variables to pass",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "aws_region": {
                    "type": "string",
                    "description": "AWS region to use",
                    "default": "us-east-1",
                    "enum": [
                        "us-east-1",
                        "us-east-2",
                        "us-west-1",
                        "us-west-2",
                        "eu-west-1",
                        "eu-west-2",
                        "eu-central-1",
                        "ap-southeast-1",
                        "ap-southeast-2",
                        "ap-northeast-1"
                    ]
                },
                "strip_ansi": {
                    "type": "boolean",
                    "description": "Whether to strip ANSI color codes from output",
                    "default": true
                }
            },
            "required": ["command", "working_directory"]
        }
    },
    {
        "name": "execute_terragrunt_command",
        "description": "Execute Terragrunt workflow commands against an AWS account",
        "inputSchema": {
            "type": "object",
            "properties": {
                "command": {
                    "type": "string",
                    "description": "Terragrunt command to execute",
                    "enum": ["init", "plan", "validate", "apply", "destroy", "output", "run-all"]
                },
                "working_directory": {
                    "type": "string",
                    "description": "Directory containing Terragrunt files"
                },
                "variables": {
                    "type": "object",
                    "description": "Terraform variables to pass",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "aws_region": {
                    "type": "string",
                    "description": "AWS region to use",
                    "default": "us-east-1",
                    "enum": [
                        "us-east-1",
                        "us-east-2",
                        "us-west-1",
                        "us-west-2",
                        "eu-west-1",
                        "eu-west-2",
                        "eu-central-1",
                        "ap-southeast-1",
                        "ap-southeast-2",
                        "ap-northeast-1"
                    ]
                },
                "strip_ansi": {
                    "type": "boolean",
                    "description": "Whether to strip ANSI color codes from output",
                    "default": true
                },
                "include_dirs": {
                    "type": "array",
                    "description": "Directories to include in a multi-module run",
                    "items": {
                        "type": "string"
                    }
                },
                "exclude_dirs": {
                    "type": "array",
                    "description": "Directories to exclude from a multi-module run",
                    "items": {
                        "type": "string"
                    }
                },
                "run_all": {
                    "type": "boolean",
                    "description": "Run command on all modules in subdirectories",
                    "default": false
                },
                "terragrunt_config": {
                    "type": "string",
                    "description": "Path to a custom terragrunt config file (not valid with run-all)"
                }
            },
            "required": ["command", "working_directory"]
        }
    },
    {
        "name": "run_checkov_scan",
        "description": "Run Checkov security scan on Terraform code",
        "inputSchema": {
            "type": "object",
            "properties": {
                "working_directory": {
                    "type": "string",
                    "description": "Directory containing Terraform files to scan"
                },
                "framework": {
                    "type": "string",
                    "description": "Framework to scan",
                    "default": "terraform",
                    "enum": ["terraform", "cloudformation", "kubernetes", "dockerfile", "serverless"]
                },
                "check_ids": {
                    "type": "array",
                    "description": "Specific check IDs to run",
                    "items": {
                        "type": "string"
                    }
                },
                "skip_check_ids": {
                    "type": "array",
                    "description": "Check IDs to skip",
                    "items": {
                        "type": "string"
                    }
                },
                "output_format": {
                    "type": "string",
                    "description": "Output format",
                    "default": "json",
                    "enum": ["json", "cli", "sarif", "junit"]
                },
                "region": {
                    "type": "string",
                    "description": "AWS region for context",
                    "default": "us-east-1",
                    "enum": [
                        "us-east-1",
                        "us-east-2",
                        "us-west-1",
                        "us-west-2",
                        "eu-west-1",
                        "eu-west-2",
                        "eu-central-1",
                        "ap-southeast-1",
                        "ap-southeast-2",
                        "ap-northeast-1"
                    ]
                }
            },
            "required": ["working_directory"]
        }
    }
]