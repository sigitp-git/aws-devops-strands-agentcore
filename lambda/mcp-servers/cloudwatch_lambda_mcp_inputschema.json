[
    {
        "name": "describe_log_groups",
        "description": "Lists AWS CloudWatch log groups with optional filtering by name prefix",
        "inputSchema": {
            "type": "object",
            "properties": {
                "log_group_name_prefix": {
                    "type": "string",
                    "description": "An exact prefix to filter log groups by name"
                },
                "max_items": {
                    "type": "integer",
                    "description": "The maximum number of log groups to return",
                    "minimum": 1,
                    "maximum": 1000
                },
                "region": {
                    "type": "string",
                    "description": "AWS region to query",
                    "default": "us-east-1",
                    "enum": [
                        "us-east-1",
                        "us-east-2",
                        "us-west-1",
                        "us-west-2",
                        "eu-west-1",
                        "eu-west-2",
                        "eu-central-1",
                        "ap-southeast-1",
                        "ap-southeast-2",
                        "ap-northeast-1"
                    ]
                }
            }
        }
    },
    {
        "name": "execute_log_insights_query",
        "description": "Executes a CloudWatch Logs Insights query and waits for the results",
        "inputSchema": {
            "type": "object",
            "properties": {
                "log_group_names": {
                    "type": "array",
                    "description": "The list of log group names to be queried",
                    "items": {
                        "type": "string"
                    },
                    "maxItems": 50,
                    "minItems": 1
                },
                "query_string": {
                    "type": "string",
                    "description": "The query string in the CloudWatch Log Insights Query Language"
                },
                "start_time": {
                    "type": "string",
                    "description": "ISO 8601 formatted start time for the query window (e.g., '2025-04-19T20:00:00+00:00')"
                },
                "end_time": {
                    "type": "string",
                    "description": "ISO 8601 formatted end time for the query window (e.g., '2025-04-19T21:00:00+00:00')"
                },
                "limit": {
                    "type": "integer",
                    "description": "The maximum number of log events to return",
                    "minimum": 1,
                    "maximum": 10000
                },
                "max_timeout": {
                    "type": "integer",
                    "description": "Maximum time in seconds to poll for complete results before giving up",
                    "default": 30,
                    "minimum": 5,
                    "maximum": 300
                },
                "region": {
                    "type": "string",
                    "description": "AWS region to query",
                    "default": "us-east-1",
                    "enum": [
                        "us-east-1",
                        "us-east-2",
                        "us-west-1",
                        "us-west-2",
                        "eu-west-1",
                        "eu-west-2",
                        "eu-central-1",
                        "ap-southeast-1",
                        "ap-southeast-2",
                        "ap-northeast-1"
                    ]
                }
            },
            "required": ["log_group_names", "query_string", "start_time", "end_time"]
        }
    },
    {
        "name": "get_metric_data",
        "description": "Retrieves CloudWatch metric data for a specific metric",
        "inputSchema": {
            "type": "object",
            "properties": {
                "namespace": {
                    "type": "string",
                    "description": "The metric namespace (e.g., 'AWS/EC2', 'AWS/Lambda')"
                },
                "metric_name": {
                    "type": "string",
                    "description": "The name of the metric (e.g., 'CPUUtilization', 'Duration')"
                },
                "dimensions": {
                    "type": "array",
                    "description": "List of dimensions that identify the metric",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "The name of the dimension"
                            },
                            "value": {
                                "type": "string",
                                "description": "The value of the dimension"
                            }
                        },
                        "required": ["name", "value"]
                    }
                },
                "start_time": {
                    "type": "string",
                    "description": "Start time in ISO format or datetime string"
                },
                "end_time": {
                    "type": "string",
                    "description": "End time in ISO format or datetime string (defaults to current time)"
                },
                "statistic": {
                    "type": "string",
                    "description": "The statistic to use for the metric",
                    "default": "Average",
                    "enum": ["Average", "Sum", "Maximum", "Minimum", "SampleCount"]
                },
                "target_datapoints": {
                    "type": "integer",
                    "description": "Target number of data points to return",
                    "default": 60,
                    "minimum": 1,
                    "maximum": 1440
                },
                "region": {
                    "type": "string",
                    "description": "AWS region to query",
                    "default": "us-east-1",
                    "enum": [
                        "us-east-1",
                        "us-east-2",
                        "us-west-1",
                        "us-west-2",
                        "eu-west-1",
                        "eu-west-2",
                        "eu-central-1",
                        "ap-southeast-1",
                        "ap-southeast-2",
                        "ap-northeast-1"
                    ]
                }
            },
            "required": ["namespace", "metric_name", "start_time"]
        }
    },
    {
        "name": "get_active_alarms",
        "description": "Gets all CloudWatch alarms currently in ALARM state",
        "inputSchema": {
            "type": "object",
            "properties": {
                "max_items": {
                    "type": "integer",
                    "description": "Maximum number of alarms to return",
                    "default": 50,
                    "minimum": 1,
                    "maximum": 1000
                },
                "region": {
                    "type": "string",
                    "description": "AWS region to query",
                    "default": "us-east-1",
                    "enum": [
                        "us-east-1",
                        "us-east-2",
                        "us-west-1",
                        "us-west-2",
                        "eu-west-1",
                        "eu-west-2",
                        "eu-central-1",
                        "ap-southeast-1",
                        "ap-southeast-2",
                        "ap-northeast-1"
                    ]
                }
            }
        }
    },
    {
        "name": "get_alarm_history",
        "description": "Gets the history for a CloudWatch alarm with time range suggestions",
        "inputSchema": {
            "type": "object",
            "properties": {
                "alarm_name": {
                    "type": "string",
                    "description": "Name of the alarm to retrieve history for"
                },
                "start_time": {
                    "type": "string",
                    "description": "Start time for the history query in ISO format (defaults to 24 hours ago)"
                },
                "end_time": {
                    "type": "string",
                    "description": "End time for the history query in ISO format (defaults to current time)"
                },
                "history_item_type": {
                    "type": "string",
                    "description": "Type of history items to retrieve",
                    "default": "StateUpdate",
                    "enum": ["ConfigurationUpdate", "StateUpdate", "Action"]
                },
                "max_items": {
                    "type": "integer",
                    "description": "Maximum number of history items to return",
                    "default": 50,
                    "minimum": 1,
                    "maximum": 1000
                },
                "region": {
                    "type": "string",
                    "description": "AWS region to query",
                    "default": "us-east-1",
                    "enum": [
                        "us-east-1",
                        "us-east-2",
                        "us-west-1",
                        "us-west-2",
                        "eu-west-1",
                        "eu-west-2",
                        "eu-central-1",
                        "ap-southeast-1",
                        "ap-southeast-2",
                        "ap-northeast-1"
                    ]
                }
            },
            "required": ["alarm_name"]
        }
    }
]